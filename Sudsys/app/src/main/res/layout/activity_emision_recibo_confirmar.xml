<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emision_recibo_confirmar">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--- Agregamos el layout tool_bar creado -->
        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            tools:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_ci"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:visibility="gone"
                            tools:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="He recibido de:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/nombre_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="0dp"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/text_view_banco3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Sucursal Póliza"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/txtSucursal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Por concepto de:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/tvconcepto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/contenedor_lista"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="13dp">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Forma Pago:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txttipo_pago"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtmoneda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_view_banco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Banco:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/txtbanco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/text_view_cheque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Número Cheque:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/txtnumero_cheque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="Monto:"
                            android:textColor="#3498DB"
                            android:textSize="18sp"
                            tools:textColor="#3498DB" />

                        <TextView
                            android:id="@+id/txtmonto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:text="TextView"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/contenedor_correo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border_para_layouut"
                            android:orientation="vertical"
                            android:paddingTop="0dp">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="Correos Confirmacion"
                                android:textColor="@color/colorAccent"
                                android:textSize="15sp"
                                tools:textColor="@color/colorAccent" />

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="0dp"
                                android:text='(Use "," para separar direcciones)'
                                android:textColor="@color/colorAccent"
                                android:textSize="15sp"
                                tools:textColor="@color/colorAccent" />

                            <TextView
                                android:id="@+id/email_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="TextView"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/confirmar"
                                    style="@style/boton_azul"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/holo_green_light"
                                    android:onClick="ejecutar_emision_recibos_imprimir"
                                    android:paddingRight="10dp"
                                    android:text="Confirmar"
                                    android:textColor="@android:color/background_light" />

                                <Button
                                    android:id="@+id/editar"
                                    style="@style/boton_azul"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:onClick="ejecutar_emision_recibo"
                                    android:paddingRight="10dp"
                                    android:text="Editar"
                                    android:textColor="@android:color/background_light" />
                            </LinearLayout>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressBarRecibo"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>