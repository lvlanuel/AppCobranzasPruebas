<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listado_cuotas_polizas_confirmar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="228dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/contenedor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <include
                    android:id="@+id/tool_bar"
                    layout="@layout/tool_bar"></include>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/logo_sud" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="50dp"
                    android:text="CONFIRMAR AMORTIZACION DE CUOTAS"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/user_people" />

                        <TextView
                            android:id="@+id/tv_nombre_cliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE CLIENTE"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_ci_cliente"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="12"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID RECIBO SUDSYS: "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_id_recibo_sudsys"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="6.96"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUMERO RECIBO SUDSYS: "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_numero_recibo_sudsys"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="13"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/dolar_7" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T. CAMBIO (Bs): "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:text="6.96"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/dolar_6" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECIBO (Bs): "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_total_recibo_bs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/dolar_6" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECIBO ($us): "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_total_recibo_sus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/pagar" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONSUMO ($us): "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_consumo_recibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="63dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/pagar" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SALDO ($us): "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_saldo_recibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="18sp" />

                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:id="@+id/contenedor_lista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="13dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/background_light"
                    android:gravity="top|center"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <Button
                        android:id="@+id/amortizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_green_light"
                        android:onClick="ejecutar_amortizaciones"
                        android:text="Amortizar"
                        android:textColor="@color/cardview_light_background"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:onClick="ejecutar_listado_polizas_cuotas"
                        android:text="Editar"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>